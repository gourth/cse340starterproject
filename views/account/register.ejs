<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>

<%- messages() %>

<form action="/account/register" method="post">
     <div class="form-container">
     <p Class="pass-word"> ALL FIELDS ARE REQUIRED </p>
    <div class="form-row">
    <label for="fname">First Name:</label>
     <input type="text" name="account_firstname" id="accountFirstname" required value="<%= locals.account_firstname %>">
     </div>
     <div class="form-row">
     <label for="lname">Last Name:</label>
     <input type="text" name="account_lastname" id="accountLastname" required value="<%= locals.account_lastname %>">
     </div>
     <div class="form-row">
     <label for="accountEmail">Email:</label>
     <input type="email" id="accountEmail" name="account_email" required value="<%= locals.account_email %>">
     </div>
     <div class="form-row">
     <label for="accountPassword">Password:</label>
     <input type="password" id="accountPassword" name="account_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
     <p class="pass-word"> Password must be minimum of 12 characters and include 1 capital letter, 1 number, and 1 special character.</p>
     </div>
     <input type="submit" value="Register">
    </form>
    </div>